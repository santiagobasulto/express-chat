<!DOCTYPE html>
<html ng-app="chatApp">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chat Room</title>

    <link rel='stylesheet' href="/bower_components/bootstrap/dist/css/bootstrap.css">

    <!-- Custom styles-->
    <link rel='stylesheet' href='/css/main.css' />
    <style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
      display: none !important;
    }
    </style>
  </head>
  <body ng-controller="MainCtrl">

    <div class="container">
      <div class="row" ng-cloak>
        <h3>Debug Info:</h3>
        <p><code>Client ID: <span>{{client.id || "Undefined"}}</span></code></p>
        <p><code>Client Name: <span>{{client.name || "Undefined" }}</span></code></p>
      </div>

      <div class="row">
        <!-- Left col -->
        <div class="col-lg-4 users-column">
          <div class="row"><div class="col-lg-12 column-title"><h3>Users</h3></div></div>
          <div class="row"><div class="col-lg-12 users-list-container"></div></div>
          <div class="row set-name-form-container">
            <form ng-submit='changeName()'>
              <div class="col-lg-8">
                <input type="text" name="name" ng-model="name" ng-disabled="!client.id">
              </div>
              <div class="col-lg-4">
                <input type="submit" value="Set name" ng-disabled="!client.id">
              </div>
            </form>
          </div>
        </div>

        <!-- Right col -->
        <div class="col-lg-8 messages-column">
          <div class="row"><div class="col-lg-12 column-title"><h3>Messages</h3></div></div>
          <div class="row">
            <div class="col-lg-12 messages-list-container">
              <ul>
                <li ng-repeat="message in messages" ng-cloak>
                  <b>{{message.author}}</b>: {{message.txt}}
                </li>
              </ul>
            </div>
          </div>
          <div class="row send-message-form-container">
            <form ng-submit='sendMessage()'>
              <div class="col-lg-1">
                Message:
              </div>
              <div class="col-lg-7">
                <input type="text" name="message" ng-model="message" ng-disabled="!client.id">
              </div>
              <div class="col-lg-2">
                <input type="submit" value="Set name" ng-disabled="!client.id">
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>

    <script src="/js/socket.io.js"></script>

    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/angular-cookies/angular-cookies.js"></script>
    <script src="/bower_components/angular-touch/angular-touch.js"></script>
    <script src="/bower_components/angular-sanitize/angular-sanitize.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/bower_components/angular-route/angular-route.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>

    <script src="/js/index.js"></script>
  </body>
</html>
